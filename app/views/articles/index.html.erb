<center><h1>Listing articles</h1></center>

<h1>Hello, Rails!</h1>
<%= link_to 'My Blog', controller: 'articles' %>
<hr>



<table>
  <thead>
    <tr>
      <th>Tytul</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    
    <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article)  %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Remove', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
     <!-- <td><%= article.text %></td> -->
     
    </tr>
  <% end %>
    
  </tbody>
</table>

  
</table>
<center>
<h1>Add new</h1>
<%= link_to 'New article', new_article_path %>
</center>